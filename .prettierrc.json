{
    "$schema": "http://json.schemastore.org/prettierrc",
    "singleQuote": true,
    "printWidth": 120,
    "overrides": [
      {
        "files": "src/**/*.tsx",
        "options": {
          "parser": "typescript",
          "tabWidth": 4
        }
      },
      {
        "files": "src/**/*.ts",
        "options": {
          "parser": "typescript",
          "tabWidth": 4
        }
      },
      {
        "files": "src/**/*.scss",
        "options": {
          "parser": "scss",
          "singleQuote": false,
          "semi": true
        }
      },
      {
        "files": "./**/*.json",
        "options": {
          "parser": "json"
        }
      }
    ]
  }
